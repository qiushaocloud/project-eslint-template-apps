{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@src/*":["src/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
